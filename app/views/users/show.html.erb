<h2>User Details</h2>

<table class="table">
  <tr>
    <th>Username</th>
    <td><%= @user.username %></td>
  </tr>
  <tr>
    <th>Email</th>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <th>First Name</th>
    <td><%= @user.first_name %></td>
  </tr>
  <tr>
    <th>Last Name</th>
    <td><%= @user.last_name %></td>
  </tr>
  <tr>
    <th>Date of Birth</th>
    <td><%= @user.date_of_birth %></td>
  </tr>
  <tr>
    <th>Job Role</th>
    <td><%= @user.job_role %></td>
  </tr>
</table>

<div class="link-container">
  <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-primary' %> |
  <%= link_to 'Back', users_path, class: 'btn btn-primary' %>
</div>
