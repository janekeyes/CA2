<div class="container">
<h1>User List</h1>
<%= form_with url: users_path, method: :get, local: true do |form| %>
  <div>
    <%= form.label :job_role, "Filter by Role" %>
    <%= form.select :job_role, ['Data Analyst', 'Developer', 'Admin', 'Management'], { include_blank: 'All Roles' }, { onchange: 'this.form.submit()' } %>
  </div>
<% end %>

<%= link_to "New User", new_user_path, class: "btn btn-primary" %>
<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Date of Birth</th>
    <th>Job Role</th>
    <th>Actions</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.date_of_birth %></td>
      <td><%= user.job_role %></td>
      <td>
        <%= link_to "Edit", edit_user_path(user), class: "btn btn-primary", method: :get %>
        |
        <%= button_to "Delete", user_path(user), method: :delete, class: "btn btn-danger", onclick: "return confirm('Are you sure?')" %>
      </td>
    </tr>
  <% end %>
</table>
</div>
